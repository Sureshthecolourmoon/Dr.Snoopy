<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@android:color/black"
                android:src="@drawable/successful" />

            <TextView
                android:id="@+id/successtv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_close"
                android:gravity="center"
                android:padding="5dp"
                android:text="Successful"
                android:textColor="#F55400"
                android:textSize="28dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/linetv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/successtv"
                android:gravity="center"
                android:padding="5dp"
                android:text="Your Pet is Registered\nSuccessfully"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/code_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linetv"
                android:layout_centerInParent="true"
                android:background="@drawable/dotlines"
                android:padding="10dp"
                android:text="ID# 1256984"
                android:textColor="#0130FA"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/code_tv"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:padding="15dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/successlink"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/shapeblue"
                    android:text="Link More Pets"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/successok"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/shapeblue"
                    android:text="Contiune"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>